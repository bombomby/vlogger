@using MudBlazor

<MudItem Class="d-flex">
    <MudIcon Icon="@Icon" Size="@Size" Color="@Color" />
    <MudText Typo="@Typo" Class="ml-2">@Text</MudText>
</MudItem>

@code {
    [Parameter]
    public String? Icon { get; set; }

    [Parameter]
    public String? Text { get; set; }

    [Parameter]
    public Size Size { get; set; } = Size.Small;

    [Parameter]
    public Color Color { get; set; }

    public Typo Typo
    {
        get
        {
            switch (Size)
            {
                case Size.Large:
                    return Typo.h6;

                case Size.Small:
                    return Typo.body2;
            }
            return Typo.body1;
        }
    }
}
